@model MovieDemo.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<div>
    <div class="row mt-45">
        <div class="col-md-3">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Poster" />
        </div>
        <div class="col-md-7">
            <div class="d-flex justify-content-between mb-3">
                <h3>@Model.Title</h3>
                <span class="mt-2">
                    <i class="bi bi-star-fill text-warning"></i>
                    <span class="text-muted">@Model.Rate.ToString("0.0")</span>
                </span>
            </div>
            <span>
                <i class="bi bi-calender-week"></i>
                <span class="text-muted">@Model.Year</span>
            </span>
            <span>
                <i class="bi bi-film"></i>
                <span class="text-muted">@Model.Genre.Name</span>
            </span>
            <p class="mt-2 text-justify">@Model.Description</p>
        </div>
    </div>
</div>
